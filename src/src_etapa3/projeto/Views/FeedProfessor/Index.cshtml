@model IEnumerable<projeto.Models.Aluno>

@{
    ViewData["Title"] = "Feed Professor";
    var currentFilter = ViewData["CurrentFilter"] as string;
}

<h1>Feed Professor</h1>

<form asp-action="Index" method="get" class="mb-3">
    <div class="form-group">
        <input type="text" name="searchString" class="form-control" placeholder="Buscar por aluno" value="@currentFilter" />
        <button type="submit" class="btn btn-primary mt-2">Buscar</button>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                <button class="btn btn-primary">Aceitar Aluno</button>
                @* <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> *@
            </td>
        </tr>
}
    </tbody>
</table>
